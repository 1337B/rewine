# =============================================================================
# Rewine Backend - Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values
# NEVER commit the .env file to version control

# =============================================================================
# Spring Configuration
# =============================================================================
SPRING_PROFILES_ACTIVE=local

# =============================================================================
# Database Configuration
# =============================================================================
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/rewine
SPRING_DATASOURCE_USERNAME=rewine
SPRING_DATASOURCE_PASSWORD=your_secure_password_here

# =============================================================================
# JWT Configuration
# =============================================================================
# Secret key for JWT signing (minimum 32 characters)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_ISSUER=rewine-backend
JWT_ACCESS_TOKEN_EXPIRATION=900000
JWT_REFRESH_TOKEN_EXPIRATION=604800000

# =============================================================================
# Server Configuration
# =============================================================================
SERVER_PORT=8080

# =============================================================================
# Flyway Configuration
# =============================================================================
SPRING_FLYWAY_ENABLED=true
SPRING_FLYWAY_BASELINE_ON_MIGRATE=true

# =============================================================================
# Logging Configuration
# =============================================================================
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_REWINE=DEBUG

