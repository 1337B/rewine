# =============================================================================
# Rewine Backend - Environment Variables Example
# =============================================================================
# Copy this file to .env and customize for your environment.
# DO NOT commit .env files with actual secrets to version control.
# =============================================================================

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rewine
DB_USER=rewine
DB_PASSWORD=rewine_secret

# Server Configuration
SERVER_PORT=8080

# JWT Configuration
# IMPORTANT: Change this in production to a secure random string (min 256 bits)
JWT_SECRET=change-this-to-a-secure-secret-in-production-minimum-256-bits
JWT_ISSUER=rewine-backend
JWT_ACCESS_EXPIRATION=900000
JWT_REFRESH_EXPIRATION=604800000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:4173,http://localhost:5173

# Logging Levels
LOG_LEVEL_APP=INFO
LOG_LEVEL_SQL=WARN

# Spring Profile
# Options: local (default), test, integration, production
SPRING_PROFILES_ACTIVE=local

