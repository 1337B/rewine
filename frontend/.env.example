# =============================================================================
# Rewine Frontend Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values for your environment.
# Variables prefixed with VITE_ are exposed to the client-side code.
# =============================================================================

# -----------------------------------------------------------------------------
# API Configuration (Required in Production)
# -----------------------------------------------------------------------------
# Base URL for the backend API
VITE_API_BASE_URL=/api/v1

# API request timeout in milliseconds
VITE_API_TIMEOUT=30000

# -----------------------------------------------------------------------------
# Mock API (Development Only)
# -----------------------------------------------------------------------------
# Set to 'true' to enable MSW mock service worker for local development
# Should be 'false' in production
VITE_MOCK_API=false

# -----------------------------------------------------------------------------
# App Configuration
# -----------------------------------------------------------------------------
# Application name displayed in UI
VITE_APP_NAME=Rewine

# Environment identifier: development | staging | production
VITE_APP_ENV=development

# Base path for the app (use '/' for root, '/app/' for subdirectory)
VITE_BASE_PATH=/

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Enable wine label scanning feature
VITE_FEATURE_WINE_SCAN=true

# Enable social login (Google, Apple, Facebook)
VITE_FEATURE_SOCIAL_LOGIN=false

# -----------------------------------------------------------------------------
# External Services (Optional)
# -----------------------------------------------------------------------------
# Google Maps API key for location features
VITE_GOOGLE_MAPS_API_KEY=

# Sentry DSN for error tracking (recommended in production)
VITE_SENTRY_DSN=

# -----------------------------------------------------------------------------
# Build Configuration
# -----------------------------------------------------------------------------
# Set to 'true' to generate source maps in production
VITE_GENERATE_SOURCEMAP=false
