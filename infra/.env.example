# =============================================================================
# Rewine Infrastructure - Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values
# NEVER commit the .env file to version control

# PostgreSQL Configuration
POSTGRES_DB=rewine
POSTGRES_USER=rewine
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5432

# Backend Configuration
BACKEND_PORT=8080

# JWT Configuration (minimum 32 characters for secret)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_ISSUER=rewine-backend
JWT_ACCESS_TOKEN_EXPIRATION=900000
JWT_REFRESH_TOKEN_EXPIRATION=604800000

# Frontend Configuration (optional)
FRONTEND_PORT=3000

# =============================================================================
# AI Configuration (Optional - for AI-powered features)
# =============================================================================
# Provider: 'mock' for development without API costs, 'openai' for real AI
AI_PROVIDER=mock
AI_ENABLED=true

# OpenAI API Key (required if AI_PROVIDER=openai)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# OpenAI Model (default: gpt-4o-mini)
OPENAI_MODEL=gpt-4o-mini

# =============================================================================
# Google Maps Configuration (Optional - for route maps and geocoding)
# =============================================================================
# Enable/disable maps features
GOOGLE_MAPS_ENABLED=true

# Google Maps API Key (required for real maps)
# Get your key from: https://console.cloud.google.com/apis/credentials
GOOGLE_MAPS_API_KEY=

